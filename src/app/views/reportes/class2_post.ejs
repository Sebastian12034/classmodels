<!DOCTYPE html>
<html html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Reportes</title>
    <link 
      rel="icon" 
      type="image/png" 
      href="https://www.pucevirtual.edu.ec/wp-content/uploads/2017/01/iconoceleste.gif"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('../home/header.ejs') %>
    <div class="col-md-6 mt-4 text-center">
      <a class="btn btn-success" href="/class2" role="button">Realizar otra consulta</a>
    </div>

    <div class="row">
      <div class="col-md-6 mt-4 text-center">
        <% if(data.length) { %>
          <table class="table table-striped table-bordered">
            <tr>
              <th>Cantidad ventas</th>
              <th>Cliente</th>
              <th>Venta total</th>
              <th>Productos distintos</th>
            </tr>
            <% for (var i = 0; i < data.length; i ++) { %>
            <tr>
              <td><%- data[i].cantVentas %></td>
              <td><%- data[i].customerName %></td>
              <td><%- data[i].VentaTotal %></td>
              <td><%- data[i].ProductosDiferentes %></td>
            </tr>
            <% } %>
          </table>
        <% } %>

        <!-- if result is empty -->
        <% if(!data.length) { %>
          <p class="text-center">Informaci√≥n no encontrada!</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
